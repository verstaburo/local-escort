.agency
    display: block
    padding-bottom: 40px

    &__header
        margin-top: 52px
        background-color: #fff
        box-shadow: 0 20px 50px rgba(29, 29, 29, .02)
        overflow hidden

        +below(768px)
            margin-top: 24px

        .image-bg
            z-index: initial
            height: 300px

            +below(768px)
                height: 150px

        .avatar
            position: absolute
            top: -44px
            left: 0

            +below(580px)
                position: static

    &__row
        position: relative
        display: flex
        padding: 37px 0
        margin: 0 40px

        &:not(:last-child)
            border-bottom: 1px solid borderColor

        .badges
            left: initial
            right: -40px

        &_info
            padding-left: 150px // 120px + 30px = avatar width + avatar margin right

            +below(1024px)
                flex-wrap: wrap

            +below(580px)
                padding-left: 0
                flex-direction: column
                align-items: center

        &_about
            display: none
            padding: 53px 149px 56px

            +below(1024px)
                padding: 30px

        &_short
            +below(1024px)
                padding: 0
                padding-top: 20px
                flex-wrap: wrap

            & ^[0]__col
                +below(1024px)
                    width: 50%
                    padding: 12px

                    +below(768px)
                        width: 100%

    &__col
        display: block

        &_heading
            +below(900px)
                width: 100%
                margin-bottom: 24px

            +below(580px)
                width: auto
                text-align: center
                margin-top: 24px

        &_action
            margin-left: auto
            cursor: pointer

            +below(900px)
                width: 50%
                margin-left: 0

                +below(580px)
                    width: auto
                    text-align: center

            &.active

                & ^[0]__plus-icon
                    transform: rotate(45deg)

        &_rating
            margin-left: 66px

            +below(900px)
                width: 50%
                margin-left: 0

                +below(580px)
                    margin-top: 24px
                    width: auto

            .rating__value
                margin-left: 14px

        &_phone
            margin-left: auto

            +below(1024px)
                margin: 0

        &_site
            margin-left: 57px

            +below(1024px)
                margin: 0

        &_email
            margin-left: 92px

            +below(1024px)
                margin: 0

        &_modified
            display: flex
            flex-direction: column
            justify-content: space-between
            margin-left: 103px
            margin-right: 31px

            +below(1024px)
                margin: 0

            span
                display: block
                color rgba(darkGreyColor, .5)
                font-family fontMain
                font-size 14px
                font-weight 400

    &__rating-label
        font-size: 12px
        font-weight: 400
        text-transform: uppercase
        color: rgba(darkGreyColor, .5)

    &__text
        margin-top: 39px
        color rgba(darkGreyColor, .79)
        font-size 16px
        font-weight 300
        line-height 1.625

        +below(1024px)
            margin-top: 15px
            max-width: 500px

    &__info
        display: block
        margin-top: -5px

        +below(768px)
            margin-top: 0

    &__description
        display: flex
        margin-top: 6px

        li
            display: flex
            align-items: center
            color rgba(darkGreyColor, .5)
            font-size 14px

            &:not(:last-child)::after
                content: ''
                display: block
                width 1px
                height 17px
                background-color borderColor
                flex-shrink: 0
                margin: 0 11px

    &__models
        display: block
        margin-top: 39px

        .grid
            margin-top: 18px

    &__load
        margin-top: 40px

    &__plus-icon
        margin-left: 8px
        m-transition(transform)
        fill: mainColor
