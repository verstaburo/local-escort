.agency
    display: block
    padding-bottom: 40px

    &__header
        margin-top: 32px
        background-color: #fff
        box-shadow: 0 20px 50px rgba(29, 29, 29, .02)

        .image-bg
            z-index: initial
            height: 300px

        .avatar
            position: absolute
            top: -44px
            left: 0

    &__row
        position: relative
        display: flex
        padding: 37px 0
        margin: 0 40px

        &:not(:last-child)
            border-bottom: 1px solid borderColor

        .badges
            left: initial
            right: -40px

        &_info
            padding-left: 150px // 120px + 30px = avatar width + avatar margin right

        &_about
            display: none
            padding: 60px 188px 56px

    &__col
        display: block

        &_action
            margin-left: auto
            cursor: pointer

            &.active

                & ^[0]__plus-icon
                    transform: rotate(45deg)

        &_rating
            margin-left: 66px

            .rating__value
                margin-left: 14px

        &_phone
            margin-left: auto

        &_site
            margin-left: 57px

        &_email
            margin-left: 92px

        &_modified
            display: flex
            flex-direction: column
            justify-content: space-between
            margin-left: 103px
            margin-right: 31px

            span
                display: block
                color rgba(darkGreyColor, .5)
                font-family fontMain
                font-size 14px
                font-weight 400

    &__rating-label
        font-size: 12px
        font-weight: 400
        text-transform: uppercase
        color: rgba(darkGreyColor, .5)

    &__text
        margin-top: 39px
        color rgba(darkGreyColor, .79)
        font-size 16px
        font-weight 300
        line-height 1.625

    &__info
        display: block
        margin-top: -5px

    &__description
        display: flex
        margin-top: 6px

        li
            display: flex
            align-items: center
            color rgba(darkGreyColor, .5)
            font-size 14px

            &:not(:last-child)::after
                content: ''
                display: block
                width 1px
                height 17px
                background-color borderColor
                flex-shrink: 0
                margin: 0 11px

    &__models
        display: block
        margin-top: 45px

    &__load
        margin-top: 40px

    &__plus-icon
        margin-left: 8px
        transition(transform)
