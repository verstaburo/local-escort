.footer
    display: block
    padding: (60px - grid-gap) 0 60px 0
    background-color: darkGreyColor
    min-height: 345px

    .container
        padding: 0

    +below(768px)
        padding: 0
        min-height: initial

    &__grid
        +below(768px)
            & ^[0]__column
                width: 100%
                padding: 0 31px

            & ^[0]__col_half-mob
                +below(768px)
                    width: 50%

            .no-padding-top
                padding-top: 0

            .order-4
                order: 4
    &__row
        min-height: 114px

        +below(768px)
            min-height: initial
            padding: 40px 0
            border-bottom: 1px solid rgba(#efefef, .06)

        &:not(:last-child)
            margin-bottom: 33px

            +below(768px)
                margin-bottom: 0
    &__col
        height: 100%

    &__heading
        display: block
        opacity .3
        color #fff
        font-size 12px
        letter-spacing .86px
        line-height 21px
        text-transform uppercase

        &_big
            line-height: initial
            margin-bottom: 2px
            color mainColor
            font-size 16px
            letter-spacing 1px
            opacity: 1

    &__select
        display: block
        padding-right: 24px

        +below(768px)
            padding-right: 0

    &__social-items
        margin-top: 21px

        a:not(:last-child)
            margin-right: 29px

    &__item
        display: block
        width: 100%
        height: 100%
        text-decoration: none
        color mainColor

        &_white
            color: #fff

        span
            color: inherit
            display: block
            font-size 16px
            text-transform uppercase

            &:not(:last-child)
                margin-top: 2px

    &__copyright
        opacity .3
        color #ffff
        font-size 14px
        line-height 24px
