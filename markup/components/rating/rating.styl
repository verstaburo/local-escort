.rating
    position: relative
    display: flex
    justify-content: space-between
    align-items: center
    cursor pointer

    &.active &__dropdown
        opacity: 1
        pointer-events all

    &_dark
        & ^[0]__value
            color: #fff

        & ^[0]__star
            fill: #424344

            &_active
                fill: mainColor

    &__stars
        display: flex
        font-size: 0

    &__star
        fill: #e6e6e6

        &:not(:last-child)
            margin-right: 9px

        &_active
            fill: mainColor

    &__value

        b, span
            font-family: fontSecond

        b
            font-weight: 500
            font-size: 21px

        span
            font-size: 16px

    &__arrow
        margin-left: 8px
        fill: mainColor

    &__row
        display: flex
        align-items: center

        &:not(:last-child)
            margin-bottom: 29px

    &__dropdown
        opacity: 0
        pointer-events: none
        padding: 36px 44px
        margin-top: 26px
        position: absolute
        top: 100%
        left: -5px
        display: block
        width: calc(100% + 15px)
        background-color: darkGreyColor
        transition(opacity)
        z-index: 10
        box-shadow 0 10px 40px 0 rgba(29, 29, 29, .1)

        &::before
            triangle(darkGreyColor, up)
            left: 50%
            top: 0
            transform: translate(-50%, -100%)

        .rating
            margin-left: 15px
            flex-shrink: 0

            &__value
                color: #fff
                margin-left: 15px

            &__star
                fill: #878889

                &_active
                    fill: mainColor

    &__heading
        display: block
        font-size 12px
        font-weight 400
        text-transform uppercase
        color: #878889
        width: 75px
        ellipsis(75px)
        letter-spacing 1px
