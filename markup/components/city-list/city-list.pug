include ../button/button

mixin city-list()
    +b.FORM(method='POST').city-list&attributes(attributes)
        +cities-container
            +cities-all
        +button('button')._uppercase._bg_grey._color_main.__button apply (18021)

mixin city(title, count)
    +e.LABEL.item&attributes(attributes)
        +e.INPUT(type='radio', name='city', value=title).control
        +e.SPAN.title= title
        +e.SPAN.badge= count

mixin cities-container
    +e.container&attributes(attributes)
        block

