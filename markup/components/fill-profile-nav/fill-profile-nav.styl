.fill-profile-nav
    display: block
    box-shadow 0 20px 50px rgba(29, 29, 29, .02)

    &__item
        display: block

        &_main
            & ^[0]__link
                background-color: mainColor
                color: #fff

        &.active
            & ^[0]__link
                color: mainColor
                border-color: mainColor
                background-color: #fff

            & ^[0]__icon
                display none

                &_close
                    display block
                    opacity 1

        &.completed
            & ^[0]__icon
                opacity: 1

    &__link
        display: flex
        align-items: center
        justify-content: space-between
        width: 100%
        height: 60px
        padding: 0 20px
        border-right: 2px solid transparent
        text-decoration: none
        color darkGreyColor
        font-family fontMain
        font-size 16px
        font-weight 400
        line-height 1.375
        background-color #fff
        m-transition(color, border-color)

    &__icon
        transform: translateX(2px)
        fill: mainColor
        opacity: 0

        &_close
            display none
            fill darkGreyColor
