include ../filter/filter
include ../container/container
include ../model-preview/model-preview
include ../grid/grid
include ../selectbox/selectbox
include ../sort-ui/sort-ui
include ../side-border-btn/side-border-btn
include ../badges/badges

mixin model-list()
    +b.model-list&attributes(attributes)
        +container
            +filter.hide-mob
            +e.header
                +e.header-col._flexible
                    +e.H1.heading All escorts
                        span 0
                +e.header-col.hide-mob
                    +e.label Sort by
                    +selectbox('Date').__control
                +e.header-col.hide-desktop
                    +sort-ui
                +e.header-col.hide-mob
                    +button.A(href='#')._color_white._bg_darkGrey._uppercase.__control View on map
            +e.SECTION.not-found
                +e.not-found-content
                    +e.not-found-picture
                        != pugHelpers.Icon.call(locals, {iconName: 'leg', className: 'model-list__not-found-icon', iconWidth: '32', iconHeight: '60'})
                    +e.H2.not-found-title Models not found
                    +e.P.not-found-description Unfortunately, the models on specified criteria was not found. Try changing the settings

            +e.H2.heading._margin You may be interested in

            +grid-masonry(4, '.model-preview').js-model-preview-grid
                +model-preview([7, 7, 7], 'Sonya', 20, 325, true)
                    +badges._top
                        +badges-item._new._skew
                            span New
                        +badges-item._info
                            span 1 hour ago
                +model-preview([5, 5, 5, 5], 'Megan', 22, 390)
                    +badges._top
                        +badges-item._vip._skew
                            span Vip
                    +badges._bottom
                        +badges-item._verified._skew
                            span Verified
                +model-preview([8, 8, 8, 8], 'Valeria', 26, 420)
                    +badges._top
                        +badges-item._vip._skew
                            span Vip
                +model-preview([9, 9, 9, 9, 9, 9, 9], 'Sonya', 20, 325)
                    +badges._bottom._skew
                        +badges-item._verified._skew
                            span Verified
                +model-preview([2, 2, 2], 'Christine', 27, 370, true)
                    +badges._top
                        +badges-item._vip._skew
                            span Vip
                +model-preview([6, 6, 6, 6], 'Anita', 24, 350)
                    +badges._top
                        +badges-item._new._skew
                            span New
                        +badges-item._info._skew
                            span 1 hour ago
                        +badges-item._vip._skew
                            span Vip
                +model-preview([1, 1, 1, 1, 1, 1], 'Kate', 25, 380)
                    +badges._top
                        +badges-item._vip._skew
                            span Vip
                +model-preview([10, 10], 'Anna', 22, 390)
