.city-suggest
    background-color darkGreyColor
    opacity 0
    transform: translate3d(0, 10px, 0) scale(.98)
    pointer-events none
    transition(opacity, transform)
    box-shadow 0 10px 40px 0 rgba(29, 29, 29, .1)

    &.active
        opacity: 1
        transform: translate3d(0, 0, 0) scale(1)
        pointer-events all

    &::after
        triangle(darkGreyColor, up)

        right 50px
        top -6px

    &__heading
        color #fff
        font-size 18px
        line-height 1.67
        text-align center
        padding 23px 45px
        border-bottom 1px solid #262728;

    &__buttons
        display flex
        justify-content space-between

    &__button
        transition(all)
        width 50%

        &:hover
            opacity 1
