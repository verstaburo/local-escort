.selectbox
    position: relative
    display: block
    cursor: pointer

    &_active
        & ^[0]__list-wrapper
            opacity: 1
            pointer-events all

    &_grey
        & ^[0]__box
            background-color bgColor

    &_deep-dark
        & ^[0]__box
            border-color: rgba(#efefef, .06)
            background-color: rgba(255, 255, 255, .02)

        & ^[0]__value
            color: #fff

    &_dark
        & ^[0]__box
            border: transparent

        & ^[0]__value
            color: mainColor

    &_small
        & ^[0]__box
          padding: 0
          height: initial

        & ^[0]__arrow
            bottom: 4px
            right: 0

        & ^[0]__list
            white-space: nowrap
            right: 0
            width: initial
            left: initial

        & ^[0]__dropdown
            width: initial

    &_default-text
        & ^[0]__value
            text-transform: initial;

    &__box
        display: flex
        align-items: center
        padding: 0 20px;
        height 60px
        border 1px solid borderColor
        cursor: pointer

    &__value
        text-transform: uppercase
        font-size: 16px
        ellipsis(100%)

    &__arrow
        position: absolute
        bottom: 7px
        right: 7px
        fill: mainColor

    &__control
        display: none

    &__list
        width: 258px
        overflow-y: auto
        flex-shrink: 0
        box-shadow 0 10px 40px rgba(29, 29, 29, .1)

        &-wrapper
            position: absolute
            top: 100%
            left: 0
            display: block
            margin-top: 13px
            width: 258px
            max-height: 240px
            pointer-events none
            opacity: 0
            transition(opacity)
            z-index: 100

            &_has_dropdown
                width: 516px

    &__dropdown
        position: absolute
        border-left: 1px solid rgba(#efefef, .06)
        top: 0
        right: 0
        margin-left: -1px
        opacity: 0
        pointer-events: none
        height: 100%
        background-color: darkGreyColor
        transition(opacity)
        width: 258px
        overflow-y: auto
        flex-shrink: 0
        box-shadow 0 10px 40px rgba(29, 29, 29, .1)

        +below(1024px)
            position: static
            margin-left: 0
            border-left: 0

    &__item
        display: flex
        align-items: center
        justify-content: space-between
        padding: 0 20px
        height: 60px
        color: #fff
        line-height: 1.375
        letter-spacing: initial
        background-color darkGreyColor
        cursor: pointer
        transition(background-color, color)
        font-size: 16px

        svg
            opacity: 0
            width: 12px
            height: 9px
            fill: #fff
            transition(opacity)
            margin-left: 24px

        &:hover
            & ^[0]__dropdown
                opacity: 1
                pointer-events: all

        &:hover:not(.selectbox__item_active)
            background-color #212223
            color: mainColor

        &_active
            background-color: mainColor
            color: #fff

            svg
                opacity 1

    &_small
        display: flex
        align-items: flex-end

        & ^[0]__box
            padding: 0
            height auto
            border 0

        & ^[0]__value
            font-weight 400
            margin-right: 6px

        & ^[0]__arrow
            position: static
            margin-bottom: 4px

    &_full
        width: 100%
