.model-info
    display: block

    &__heading
        color darkGreyColor
        font-family fontSecond
        font-size 33px
        font-weight 400
        letter-spacing initial

    &__description
        margin-top: 30px
        color rgba(darkGreyColor, .79)
        font-family fontMain
        font-size 16px
        font-weight 300
        line-height 26px

    .grid
        margin-top: 47px

    &__subheading
        color darkGreyColor
        font-family fontMain
        font-size 20px
        font-weight 400
        letter-spacing initial
        margin-bottom: 6px

    &__item
        display: flex
        align-items: center
        border-bottom: 1px solid borderColor
        min-height: 60px

        span
            color darkGreyColor
            font-family fontMain
            font-size 16px
            font-weight 400
            line-height 22px
            letter-spacing initial

    &__icon-ok
        fill: mainColor
        margin-right: 12px

    &__row
        margin-top: 53px

    &__tour
        margin-top: 52px
