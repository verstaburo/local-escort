.model-info
    display: block

    &__description
        margin-top: 30px
        color rgba(darkGreyColor, .79)
        font-family fontMain
        font-size 16px
        font-weight 300
        line-height 26px

    .grid
        margin-top: 47px

    &__item
        display: flex
        align-items: center
        border-bottom: 1px solid borderColor
        min-height: 60px
        color darkGreyColor
        font-size 16px
        letter-spacing initial

        &_row
            justify-content: space-between

        span
            font-family fontMain
            font-weight 400
            line-height 22px


        b
            font-family fontSecond
            font-weight: 500

    &__icon-ok
        fill: mainColor
        margin-right: 12px

    &__row
        margin-top: 53px

    &__tour
        margin-top: 52px
