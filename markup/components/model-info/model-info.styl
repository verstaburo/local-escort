.model-info
    display: block

    +below(768px)
        padding-left: 31px
        padding-right: 31px

    &__description
        margin-top: 30px
        color rgba(darkGreyColor, .79)
        font-family fontMain
        font-size 16px
        font-weight 300
        line-height 26px

        +below(768px)
            margin-top: 27px

    .grid
        margin-top: 39px

        +below(768px)
            margin-top: 11px
            margin-left: 0
            margin-right: 0

            &__col
                width: 100%
                padding-left: 0
                padding-right: 0

                &:not(:first-child)
                    padding-top: 0

    &__item
        display: flex
        align-items: center
        border-bottom: 1px solid borderColor
        min-height: 60px
        color darkGreyColor
        font-size 16px
        letter-spacing initial

        &_row
            justify-content: space-between

        span
            font-family fontMain
            font-weight 400
            line-height 22px


        b
            font-family fontSecond
            font-weight: 500

    &__icon-ok
        fill: mainColor
        margin-right: 12px

    &__row
        margin-top: 53px

        +below(768px)
            margin-top: 35px
    &__tour
        margin-top: 52px

        +below(768px)
            margin-top: 40px
