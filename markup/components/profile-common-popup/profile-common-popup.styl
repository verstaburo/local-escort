.profile-common-popup
    display: flex
    min-width: 703px

    .image-bg
        width: 100%
        height: 347px
        z-index: initial

    &__col
        display: flex
        flex-direction: column

        &_card
            width: 258px
            background-color: darkGreyColor

            & ^[0]__footer
                padding: 0 25px

            .heading
                color: #fff
                margin-bottom: 6px

        &_info
            flex: 1
            background-color: #fff

            & ^[0]__footer
                border-color: borderColor

    &__button
        min-width: 207px
        margin: 0 auto

    &__footer
        margin-top: auto
        display: flex
        align-items: center
        justify-content: center
        height: 100px
        border-top: 1px solid transparent
        flex-shrink: 0

        &_column
            flex-direction: column
            align-items: initial

    // call popup
    &-call
        display: block
        text-align: center

        &__phone
            display: inline-flex
            align-items: center
            margin-top: 77px
            margin-bottom: 72px
            text-decoration: none

        &__icon
            margin-right: 15px
            fill: mainColor

        &__text
            display: inline-block
            vertical-align top
            margin-top: 9px
            max-width 330px
            color rgba(darkGreyColor, .59)
            font-family fontMain
            font-size 16px
            font-weight 400
            line-height 1.375
            text-align: center

    // qr code popup
    &-qr
        display: block
        text-align: center

        &__img
            margin-top: 50px
            width: 246px
            height: 246px

    // report popup
    &-report
        padding: 35px 30px
        height: 100%

        .info-control:not(:last-child)
            margin-bottom: 12px

        & ~ ^[0]__footer ^[0]__button
            display: none

        &__step
            display: none
            width: 100%
            height: 100%

        &__control
            width: 100%
            height: 100%
            resize: none
            border: 1px solid borderColor
            padding: 19px 20px
            color darkGreyColor
            font-family fontMain
            font-size 16px
            font-weight 400
            line-height 1.375

            &::placeholder
                opacity: 1
