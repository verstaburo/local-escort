.profile-card
    position: relative
    display: block
    padding: 46px 40px 0

    &__avatar
        margin: 0 auto

    &__heading
        display: block
        width: 100%
        margin-top: 30px
        text-align: center
        font-size 20px
        font-weight 400
        text-transform uppercase

    &__rating
        margin-top: 13px
        margin-left: 32px
        margin-right: 32px

    &__buttons
        display: flex
        margin-top: 33px

        .button
            flex: 1

        .icon-button
            flex-shrink: 0

    .table
        margin-top: 45px
        margin-left: 13px
        margin-right: 13px

    &__share
        display: block
        margin-top: 30px

        &-heading
            display: block
            color rgba(darkGreyColor, .5)
            font-size 12px
            font-weight 400
            text-transform uppercase
            padding-left: 11px

        &-links
            display: flex
            flex-wrap: wrap
            margin-top: 18px

            a
                display: block
                padding: 8px 16px
                color darkGreyColor
                font-family fontMain
                font-size 16px
                font-weight 400
                text-decoration: none
                border: 1px solid borderColor
