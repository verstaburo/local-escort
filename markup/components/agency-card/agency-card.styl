.agency-card
    display: block
    background-color: #fff
    padding: 0 40px
    overflow: hidden
    box-shadow 0 20px 50px 0 rgba(29, 29, 29, .02)

    .short-info
        margin-top: 2px

    &_new
        position: relative
        padding: 0
        padding-top: 25px
        box-shadow: 0 20px 50px rgba(29, 29, 29, .02)
        background-color: transparent

        .avatar
            margin-left: initial
            position: absolute
            top: 25px
            left: 30px
            transform: translateY(-50%)
            z-index: 2
            pointer-events: none

        .badges
            z-index: 2
            top: 24px
            pointer-events: none

        .heading
            color: #fff
            letter-spacing: 1px

        & ^[0]__info
            position: relative
            z-index: 3
            margin-left: 0
            width: 270px
            flex-shrink: 1
            margin-right: 30px

        & ^[0]__rating
            position: relative
            z-index: 3
            margin-left: 4px
            padding-top: 9px

            +below(768px)
                position: absolute
                top: 100%
                left: 0
                padding-left: 31px
                padding-right: 31px
                display: flex
                align-items: center
                width: 100%
                height: 60px
                border-bottom: 1px solid borderColor
                margin-left 0
                padding-top 0

                .rating
                    width: 100%

                    &__value
                        color: darkGreyColor

            &-label
                color: #909090
                letter-spacing: 1px

                +below(768px)
                    display: none

        & ^[0]__description
            li
                color: #909090

                &:not(:last-child)::after
                    background-color: rgba(#e5e5e5, .15)

        & ^[0]__row
            padding-left: 42px
            padding-right: 41px

            +below(768px)
                padding-left: 30px
                padding-right: 30px

                &_bottom
                    flex-direction: column
                    justify-content: flex-start
                    margin-top: 60px

            & ^[0]__col
                +below(768px)
                    width: 100%

                &:first-child
                    width: 270px
                    flex-shrink: 0
                    margin-right: 30px

                    +below(768px)
                        margin-right: 0
                        width: 100%

                &:not(:last-child)
                    margin-right: 0px

                    +below(768px)
                        margin-bottom: 21px

    &_column
        box-sizing: border-box

        &:first-of-type {
            .map__content & {
                margin-top: 92px
            }
        }

        & ^[0]__info
            width: 100%

        & ^[0]__description
            margin-left: -1px

        .button
            width: 100%
            line-height: 3.625
            background-color: #fff
            border-top: 1px solid borderColor
            display: block !important

        & ^[0]__rating
            position: absolute
            top: 100%
            left: 0
            padding-left: 31px
            padding-right: 31px
            display: flex
            align-items: center
            width: 100%
            height: 60px
            border-bottom: 1px solid borderColor
            background-color: #fff
            margin-left: 0

            .rating
                width: 100%

                &__value
                    color: darkGreyColor

            &-label
                display: none

        & ^[0]__row
            padding-left: 30px
            padding-right: 30px

            &:not(:last-child)
                border-bottom: 0

            &_top
                min-height: initial

            &_bottom
                flex-direction: column
                justify-content: flex-start
                margin-top: 60px

            & ^[0]__col
                width: 100%

                &:first-child
                    flex-shrink: 0
                    margin-right: 0
                    width: 100%

                &:last-child
                    margin-left: 0

                &:not(:last-child)
                    margin-left: 0
                    margin-right: 0px
                    margin-bottom: 21px

    &__picture
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        margin auto
        object-fit cover
        font-family 'object-fit: cover'
        width 0
        min-width 100%
        min-height 100%
        max-height: 100%

    &__row
        padding: 30px 0
        display: flex
        width: 100%
        text-decoration: none

        &:not(:last-of-type)
            border-bottom: 1px solid borderColor

            +below(768px)
                border-bottom: 0

        &_top
            position: relative
            padding-top: 56px
            min-height: 140px
            z-index: 1

            &:hover::before
                background-color: rgba(darkGreyColor, .8)

            &:before
                content: ''
                position: absolute
                top: 0
                left: 0
                display: block
                width: 100%
                height: 100%
                z-index: 1
                background-color: rgba(darkGreyColor, .7)
                m-transition(background-color)

        &_bottom
            align-items: center
            min-height: 112px
            background-color: #fff

            & ^[0]__col:last-child
                margin-left: 34px
                +below(768px)
                    margin-left: 0

    &__description
        display: flex
        margin-top: 6px

        li
            display: flex
            align-items: center
            color rgba(darkGreyColor, .5)
            font-size 14px

            &:not(:last-child)::after
                content: ''
                display: block
                width 1px
                height 17px
                background-color borderColor
                flex-shrink: 0
                margin: 0 11px

    &__info
        margin-left: 17px

    &__rating
        margin-left: auto

        +below(768px)
            background-color: #fff

        .rating__value
            margin-left: 14px

        &-label
            font-size: 12px
            font-weight: 400
            text-transform: uppercase
            margin-top: 8px
            margin-bottom: 7px
            color: rgba(darkGreyColor, .5)

    &__col
        &:not(:last-child)
            margin-right: 50px

        &_push_right
            margin-left: auto

    .button
        line-height: 3.125

        +below(768px)
            width: 100%
            line-height: 3.625
            background-color: #fff
            border-top: 1px solid borderColor
