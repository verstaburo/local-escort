.agency-card
    display: block
    background-color: #fff
    padding: 0 40px

    &__row
        padding: 30px 0
        display: flex
        width: 100%

        &:not(:last-child)
            border-bottom: 1px solid borderColor

    &__description
        display: flex
        margin-top: 6px

        li
            display: flex
            align-items: center
            color rgba(darkGreyColor, .5)
            font-size 14px

            &:not(:last-child)::after
                content: ''
                display: block
                width 1px
                height 17px
                background-color borderColor
                flex-shrink: 0
                margin: 0 11px

    &__heading
        font-size 20px
        font-weight 400
        text-transform uppercase

    &__info
        margin-left: 17px

    &__rating
        margin-left: auto

        .rating__value
            margin-left: 14px

    &__col
        &:not(:last-child)
            margin-right: 50px

        &_push_right
            margin-left: auto

    .avatar
        width: 50px
        height: 50px
        margin-left: -10px

    .button
        line-height: 3.125
