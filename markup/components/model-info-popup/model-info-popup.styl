modelInfoPopupBigXPadding = 30px
modelInfoPopupMediumXPadding = 18px

.model-info-popup
    position: absolute;
    top: 100%
    left: 50%;
    transform: translate(-50%, 100px)
    display: block
    width: 258px
    background-color: #fff
    z-index: 100
    box-sizing: border-box
    box-shadow 0 10px 40px rgba(29, 29, 29, .1)
    opacity: 0
    pointer-events none
    transition(opacity, transform)

    &.active
        transform: translate(-50%, -4px)
        opacity: 1;

    &::before
        content: ''
        position: absolute
        top: 0
        left: 50%
        transform: translate(-50%, -50%) rotate(45deg)
        width: 9px
        height: 9px
        background-color: #fff


    &_left
        left: 0
        transform: translate(0, 100px)

        &::before
            left: 30px

        &.active
            transform: translate(0, -4px)

    &_right
        left: 100%
        transform: translate(-100%, 100px)

        &::before
            left: initial
            right: 30px

        &.active
            transform: translate(-100%, -4px)

    &__header
        border-bottom: 1px solid borderColor
        border-left: 0
        border-right: 0

    &__rating
        padding: 23px modelInfoPopupBigXPadding 22px;
        border-bottom: 1px solid borderColor

    &__info
        display: flex
        justify-content: space-between
        padding: 22px modelInfoPopupBigXPadding 18px;

    &__tags
        margin-left: 18px
        margin-right: 18px

    &__action
        display: flex
        justify-content: center
        align-items: center
        margin-top: 18px
        width: 100%
        height: 60px
        border-top: 1px solid borderColor
        font-size: 16px
        text-transform: uppercase
        text-decoration: none
        color: darkGreyColor
