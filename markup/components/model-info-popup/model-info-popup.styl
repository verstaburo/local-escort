modelInfoPopupBigXPadding = 30px
modelInfoPopupMediumXPadding = 18px

.model-info-popup
    position: absolute;
    top: 100%
    left: 50%;
    transform: translate(-50%, -4px)
    display: none
    width: 258px
    background-color: #fff
    z-index: 50
    box-sizing: border-box

    &::before
        content: ''
        position: absolute
        top: 0
        left: 50%
        transform: translate(-50%, -50%) rotate(45deg)
        width: 9px
        height: 9px
        background-color: #fff

    .close
        position: absolute
        top: 0
        right: 0
        transform: translate(50%, -50%)
        z-index 50

        +above(1024px)
            display: none

    &__header
        border-bottom: 1px solid borderColor

    &__rating
        padding: 23px modelInfoPopupBigXPadding 22px;
        border-bottom: 1px solid borderColor

    &__info
        display: flex
        justify-content: space-between
        padding: 22px modelInfoPopupBigXPadding 18px;

    &__tags
        margin-left: 18px
        margin-right: 18px

    &__action
        display: flex
        justify-content: center
        align-items: center
        margin-top: 18px
        width: 100%
        height: 60px
        border-top: 1px solid borderColor
        font-size: 16px
        text-transform: uppercase
        text-decoration: none
        color: darkGreyColor
