modelInfoPopupBigXPadding = 30px
modelInfoPopupMediumXPadding = 18px

.model-info-popup
    position: absolute;
    top: 100%
    left: 50%;
    transform: translate3d(-50%, 10px, 0) scale(.98)
    display: block
    width: 258px
    background-color: #fff
    z-index: 100
    box-sizing: border-box
    box-shadow 0 10px 40px rgba(29, 29, 29, .1)
    opacity: 0
    pointer-events none
    m-transition(opacity, transform)

    &.active
        transform: translate3d(-50%, -4px, 0) scale(1)
        opacity: 1;
        pointer-events all

    &::before
        content: ''
        position: absolute
        top: 0
        left: 50%
        transform: translate3d(-50%, -50%, 0) rotate(45deg)
        width: 9px
        height: 9px
        background-color: #fff

    &_left
        left: 0
        transform: translate3d(0, 10px, 0) scale(.98)

        &::before
            left: 30px

        &.active
            transform: translate3d(0, -4px, 0) scale(1)

    &_right
        left: 100%
        margin-left: -12px
        transform: translate3d(-100%, 10px, 0) scale(.98)

        &::before
            left: auto
            right: 24px

            +below(540px)
                display none

        &.active
            transform: translate3d(-100%, -4px, 0) scale(1)

        .close
            right 6px

    &__header
        border-bottom: 1px solid borderColor
        border-left: 0
        border-right: 0
        border-top: 0

    &__rating
        padding: 23px modelInfoPopupBigXPadding 22px;
        border-bottom: 1px solid borderColor
        cursor: auto !important

    &__info
        display: flex
        justify-content: space-between
        padding: 22px modelInfoPopupBigXPadding 18px;

    &__tags
        margin-left: 18px
        margin-right: 18px

    &__action
        display: flex
        justify-content: center
        align-items: center
        margin-top: 18px
        width: 100%
        height: 60px
        border-top: 1px solid borderColor
        font-size: 16px
        text-transform: uppercase
        text-decoration: none
        color: darkGreyColor
        iziAnimation()
