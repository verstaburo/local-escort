.boost-preview
    display: flex
    flex-direction: column
    width: 100%
    height: 100%

    &__picture
        position: relative
        flex-shrink 0

    &__img
        width: 100%
        height 212px

    &__credits
        position: absolute
        top: 100%
        right: 24px
        transform: translateY(-50%)
        display: flex
        align-items: center
        justify-content: center
        width: 60px
        height: 60px
        border-radius: 50%
        background-color: mainColor
        overflow: hidden

        span
            font-size 16px
            color #fff

    &__icon
        fill: #fff
        margin-left: 4px

    &__content
        display: flex
        flex-direction: column
        padding-top 36px
        border: 1px solid borderColor
        border-top: 0
        text-align: center
        flex-grow 1

    &__heading
        display: block
        font-size: 20px
        padding: 0 22px
        letter-spacing: initial

    &__description
        padding: 0 40px 36px
        margin-top: 10px
        font-size: 16px
        line-height: 1.375
        color: rgba(darkGreyColor, .59)

    &__btn
        display: flex
        justify-content: center
        align-items: center
        width: 100%
        height: 60px
        margin-top: auto
        text-decoration: none
        border-top: 1px solid borderColor
        font-size: 16px
        letter-spacing 1px
        font-weight: 700
        color: darkGreyColor
        text-transform: uppercase
