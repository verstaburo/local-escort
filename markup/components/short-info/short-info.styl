.short-info
    display: block

    &__heading
        display: block
        font-size 12px
        font-weight 400
        text-transform uppercase
        color: #878889
        letter-spacing: 1px

        &_md
            font-size: 16px
            text-transform: none

    &__content
        display: block
        margin-top: 5px

    &__text
        display: block
        line-height 1.375
        font-size: 16px
        color: darkGreyColor
        text-decoration: none

        &_md
            font-size: 16px

        span
            color: #878889

    a.short-info__text:hover
        color: mainColor
