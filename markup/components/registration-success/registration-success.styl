.registration-success
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    height: 100%
    min-height: 500px

    &__text
        margin-top: 23px
        display: inline-block
        max-width: 318px
        color rgba(darkGreyColor, .59)
        font-family fontMain
        font-size 16px
        font-weight 400
        line-height 1.375
        text-align: center

    &__follow
        margin-top: 40px
        text-align: center

        &-us
            margin-bottom: 16px
            color darkGreyColor
            font-family fontMain
            font-size 16px
            font-weight 400
            line-height 1.375
