.recommended-slider
    display: block

    +below(768px)
        margin-left: 31px
        margin-right: 31px

    &__items
        position: relative
        margin-top: 58px

        +below(768px)
            margin-top: 33px

    &__button
        position: absolute
        top: 45%
        transform: translateY(-50%)
        width: 40px
        height: 40px
        border-radius: 50%
        z-index: 1
        background-color: darkGreyColor
        cursor: pointer
        opacity: 1
        transition(opacity)

        +below(768px)
            display: none

        &.swiper-button-disabled
            opacity: 0
            pointer-events: none

        &_prev
            left: 50px

        &_next
            right: 50px
