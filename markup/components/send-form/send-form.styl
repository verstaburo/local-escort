.send-form
    display: block
    background-color: #fff
    padding: 27px 29px
    box-shadow 0 20px 50px rgba(29, 29, 29, .02)

    &__controls
        position: relative
        display: block
        border-bottom: 1px solid borderColor
        padding-bottom: 20px
        padding-right: 160px

    &__control
        white-space pre-line
        width: 100%
        color darkGreyColor
        font-family fontMain
        font-size 16px
        font-weight 400
        line-height 1.375

        &[placeholder]:empty::before
            content: attr(placeholder)
            pointer-events none

    &__button
        position: absolute
        bottom: 0
        right: 0
        color darkGreyColor
        font-family fontMain
        font-size 16px
        font-weight 400
        text-transform uppercase
        border: 0
        border-bottom 2px solid mainColor
        padding: 21px 0
        background-color: transparent
        letter-spacing 1px
        display: none
        transition(all)
