.reviews
    display: block

    &__heading
        color darkGreyColor
        font-family fontSecond
        font-size 33px
        font-weight 400
        letter-spacing initial

    &__form
        margin-top: 58px
        display: block
        padding: 20px
        background-color: #fff

    &__control
        width: 100%
        padding: 15px 0
        min-height: 50px
        height: 50px
        font-size: 14px
        resize: vertical
        border-bottom: 1px solid borderColor

        &::placeholder
            opacity: 1

    &__rate-heading
        display: block
        margin-top: 19px
        color rgba(darkGreyColor, .59)
        font-family fontMain
        font-size 16px
        font-weight 400

    &__rate
        margin-top: 32px

        &-row
            display: flex

            &:not(:first-child)
                margin-top: 35px

            .rating-interactive-counter:not(:last-child)
                margin-right: 49px

    &__no-reviews
        margin-top: 35px
        display: block
        font-size: 16px
        color: rgba(darkGreyColor, .5)
