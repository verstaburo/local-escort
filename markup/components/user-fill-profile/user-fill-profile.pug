                each day in ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday']
                    +col(4).grid__col_align_center
                        +checkbox(false, 'day', day).js-user-fill-profile-day #{day}
                    +col(4)
                        +selectbox('00:00')
                    +col(4)
                        +selectbox('24:00')

                +col(4)
                    +button('button')._uppercase._bg_darkGrey._color_main.user-fill-profile__action Save & Exit
