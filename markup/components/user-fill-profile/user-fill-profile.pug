//- Photo & Video
mixin user-fill-profile(activeItem)
    +b.user-fill-profile&attributes(attributes)
        +container
            +heading My Profile
            +e.content
                block
                +e.sidebar
                    -
                        var menuItems = [
                            { title: 'Photo & Video', href: 'user-fill-profile-ajax-1.html'},
                            { title: 'Personal data', href: 'user-fill-profile-ajax-2.html'},
                            { title: 'Availability', href: 'user-fill-profile-ajax-3.html'},
                            { title: 'Contact', href: 'user-fill-profile-ajax-4.html'},
                            { title: 'Rate', href: 'user-fill-profile-ajax-5.html'},
                            { title: 'About me', href: 'user-fill-profile-ajax-6.html'},
                            { title: 'Service', href: 'user-fill-profile-ajax-7.html'},
                            { title: 'Tours', href: 'user-fill-profile-ajax-8.html'},
                            { title: 'Get verified', href: 'user-fill-profile-ajax-9.html'}
                        ];

                    +fill-profile-nav
                        each item, index in menuItems
                            - i = index + 1
                            if i < activeItem
                                +fill-profile-nav-item(item.href).completed= item.title
                            else if i === activeItem
                                +fill-profile-nav-item(item.href).active= item.title
                            else if i === menuItems.length
                                +fill-profile-nav-item(item.href)._main= item.title
                            else
                                +fill-profile-nav-item(item.href)= item.title

mixin user-fill-profile-1
    form(action='#' enctype='multipart/form-data' method='post').user-fill-profile__main
        .user-fill-profile__section
            +heading._md Photos
            +grid-masonry(3, '.user-fill-profile__masonry-item').js-user-fill-profile-photos
                +uploaded-photo('profile/photos/1.jpg').user-fill-profile__masonry-item
                +uploaded-photo('profile/photos/2.jpg').user-fill-profile__masonry-item
                +file-column(null, 'photo', 'image/*', false, 'Add photo', 'The size should not exceed 2 MB').user-fill-profile__masonry-item
        .user-fill-profile__section
            +heading._md Video
            +grid
                +col(6)
                    +field
                        +field-label Video file
                        +file(null, 'video-file', 'video/*', true)
                +col(6)
                    +field
                        +field-label Video URL
                        +field-input

                +col(4)
                    +button('button')._uppercase._bg_darkGrey._color_main.user-fill-profile__action Save & Exit
                +col(4)
                    +button('button')._uppercase._bg_main._color_white.user-fill-profile__action.js-user-fill-profile-continue continue

