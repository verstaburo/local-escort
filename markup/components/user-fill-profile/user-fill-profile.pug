//- Photo & Video
mixin user-fill-profile()
    +b.user-fill-profile&attributes(attributes)
        +container
            +heading My Profile
            +e.content
                +e.FORM(action='#' enctype='multipart/form-data' method='post').main
                    +e.section
                        +heading._md Photos
                        +grid-masonry(3, '.user-fill-profile__masonry-item').js-user-fill-profile-photos
                            +uploaded-photo('profile/photos/1.jpg').user-fill-profile__masonry-item
                            +uploaded-photo('profile/photos/2.jpg').user-fill-profile__masonry-item
                            +file-column(null, 'photo', 'image/*', false, 'Add photo', 'The size should not exceed 2 MB').user-fill-profile__masonry-item
                    +e.section
                        +heading._md Video
                        +grid
                            +col(6)
                                +field
                                    +field-label Video file
                                    +file(null, 'video-file', 'video/*', true)
                            +col(6)
                                +field
                                    +field-label Video URL
                                    +field-input

                            +col(4)
                                +button('button')._uppercase._bg_darkGrey._color_main.__action Save & Exit
                            +col(4)
                                +button('button')._uppercase._bg_main._color_white.__action continue
                +e.sidebar
                    +fill-profile-nav
                        +fill-profile-nav-item('user-fill-profile.html').active Photo & Video
                        +fill-profile-nav-item('user-fill-profile2.html') Personal data
                        +fill-profile-nav-item('user-fill-profile3.html') Availability
                        +fill-profile-nav-item('user-fill-profile4.html') Contact
                        +fill-profile-nav-item('user-fill-profile5.html') Rate
                        +fill-profile-nav-item('user-fill-profile6.html') About me
                        +fill-profile-nav-item('user-fill-profile7.html') Service
                        +fill-profile-nav-item('user-fill-profile8.html') Tours
                        +fill-profile-nav-item('user-fill-profile9.html')._main Get verified

