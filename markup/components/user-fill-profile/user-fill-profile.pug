                                    +col(12)
                                        +radio(false, 'incall-availability', 4) Other
                                        +textarea('incall-details', 'Details here').__other-textarea
                            +e.col
                                +grid
                                    +col(12)
                                        +checkbox(true, 'outcall', 1) Outcall
                                    +col(12)
