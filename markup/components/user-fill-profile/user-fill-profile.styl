.user-fill-profile
    display: block
    padding-bottom: 54px

    .heading
        margin-top: 47px

        &_md
            margin-top: 0

    &__content
        display: flex
        margin-top: 46px

    &__main
        flex: 1
        margin-right: 24px

    &__sidebar
        width: 258px

    &__masonry-item:not(:last-child)
        margin-bottom: 24px

    &__action
        width: 100%
        margin-top: 16px

    &__section

        & > .heading
            margin-bottom: 11px

        &:not(:first-child)
            margin-top: 40px
            padding-top: 35px
            border-top: 1px solid borderColor

    &__add-btn
        width: 100%
        height: 60px

        .icon-button__icon
            fill: mainColor

    &__subsection
        display: flex
        width: 100%

        &_visual
            justify-content: space-between
            border: 1px solid borderColor
            padding: 20px

    &__col
        width: 50%

        &:first-child
            margin-right: 25px

        &:last-child
            margin-left: 25px

    &__other-textarea
        margin-top: 20px
        margin-left: 40px

    &__label
        color darkGreyColor
        font-family fontMain
        font-size 16px
        font-weight 400

        &_flex_end
            display: flex
            align-items: flex-end
            height: 100%

    &__column
        display: flex
        align-items: center

        &_half
            width: 50%

        & ^[0]__label
            margin-right: 12px

    .map
        margin-top: 16px
        width: 100%
        height: 374px
