.user-fill-profile
    display: block
    padding-bottom: 54px

    .heading
        margin-top: 47px

        &_md
            margin-top: 0

    &__content
        display: flex
        margin-top: 46px

    &__main
        flex: 1
        margin-right: 24px

    &__sidebar
        width: 258px

    &__masonry-item:not(:last-child)
        margin-bottom: 24px

    &__action
        width: 100%
        margin-top: 16px

    &__section

        & > .heading
            margin-bottom: 11px

        &:not(:first-child)
            margin-top: 40px
            padding-top: 35px
            border-top: 1px solid borderColor

    &__add-btn
        width: 100%
        height: 60px

        .icon-button__icon
            fill: mainColor

    &__subsection
        display: flex
        width: 100%

    &__col
        width: 50%

        &:first-child
            margin-right: 25px

        &:last-child
            margin-left: 25px
