.user-dropdown-popup
    display: block
    background-color: darkGreyColor
    padding-left: 31px
    padding-right: 31px
    width: 100%
    height: 100%

    &__row
        display: flex
        width: 100%

    &__col
        width: 50%

    &__link
        font-size 16px
        letter-spacing 1px
        color #fff
        text-decoration: none

        &_color_main
            color: mainColor

            svg
                fill: mainColor
                margin-left: 4px

        &_color_grey
            color: rgba(#fff, .5)


    &__badge
        display: flex
        justify-content: center
        align-items: center
        width 24px
        height 24px
        border-radius 4px
        background-color mainColor
        box-shadow 0 4px 8px 0 rgba(210, 163, 111, .2)
        font-size 12px
        font-weight bold
        color #fff
