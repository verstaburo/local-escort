.info-control
    display: block
    width: 100%
    height: 60px
    cursor: pointer

    &__control
        display: none

        &:checked
            & + ^[0]__box
                background-color: darkGreyColor
                border-color: transparent

                & ^[0]__label
                    color: #fff

                & ^[0]__ok
                    transform: scale(1)

    &__box
        display: flex
        align-items: center
        height: 100%
        padding: 0 20px
        background-color: #fff
        border: 1px solid borderColor
        iziAnimation(darkGreyColor)

        &:hover
            & ^[0]__label
                color: #fff

            & ^[0]__ok
                fill mainColor

    &__label
        color darkGreyColor
        font-family fontMain
        font-size 16px
        font-weight 400
        ellipsis(100%)
        transition(all)
        margin-right: 20px
        text-transform: uppercase
        letter-spacing 1px

    &__ok
        margin-left: auto
        flex-shrink: 0
        fill: mainColor
        transform: scale(0)
        transition(transform)

    &_light

        & ^[0]__box
            background-color: transparent
            box-shadow 0 0 0 rgba(0, 0, 0, 0)

        & ^[0]__control
            display: none

            &:checked
                & + ^[0]__box
                    background-color: #fff
                    border-color: transparent
                    box-shadow 0 20px 50px rgba(29, 29, 29, 0.02)

                    &:hover
                        & ^[0]__label
                            color: #fff

                    & ^[0]__label
                        color: darkGreyColor

