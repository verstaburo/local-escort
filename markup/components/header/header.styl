.header
    display: flex
    flex-direction: column
    width: 100%
    position: relative
    z-index: 200
    background-color: bgColor
    transform translate3d(0, 0, 0)

    &__filter-icon
        fill: darkGreyColor

    .show-fixed
        display: none

    &__navbar
        position: relative
        z-index: 150
        transform: translate3d(0, 0, 0)

        .navbar__item_credits .navbar__dropdown
            .navbar__items
                justify-content: center

            .navbar__link
                padding: 0 36px

    &_map
        position: relative !important
        z-index: 9999 !important

        & ^[0]__navbar
            position: static !important
            opacity: 1 !important
            order: 2 !important
            transform: translate3d(0, 0, 0) !important

        ~ .page__wrapper
            margin-top: 0 !important

    &.fixed, &_map
        position: fixed
        top: 0
        left: 0

        &:not(.no-shadow123)
            box-shadow: 0 10px 40px rgba(29, 29, 29, .1)

            .header__navbar
                box-shadow: 0 10px 40px rgba(29, 29, 29, .1)

        &.no-shadow
            .header__navbar
                box-shadow none

        & ^[0]__user-nav
            border-top: 1px solid borderColor
            border-bottom 0

        .photo-tape
            z-index: 200

            &__text
                display: none

        .show-fixed
            display: block

            .selectbox__box
                border-color: transparent

        & ^[0]__navbar
            position: absolute
            top 0
            left 0
            width 100%
            opacity 0
            transition all .4s ease-in-out
            /*order: 2*/

            &.move
                opacity 1
                transform: translate3d(0, 88px, 0)

                +below(768px)
                    transform: translate3d(0, 60px, 0)

        & ^[0]__navbar_desktop

            .navbar
                height: 60px

                &__item
                    +below(1200px)
                        min-width: 100px

                    &_login
                        min-width: 70px

                        .navbar__link
                            justify-content: center

                        .navbar__col:last-child
                            display: none

              .search-bar__close
                border: 0
                border-left: 1px solid borderColor

              .search-bar_extended .search-bar__close
                margin: 0

            .navbar
                z-index: 150

                &__link:not(.navbar__link_row)
                    &:hover, &.active
                        .navbar__heading, .navbar__description
                            color: mainColor

                &__item_logo
                    min-width: auto

                    .navbar__link
                        padding: 10px

                    .logo__text
                        display: none

                &__item_filter
                    min-width: 163px
                    +below(1250px)
                        min-width: 100px

                    .navbar__col:first-of-type
                        margin-left: 0
                        margin-right: 12px
                    .navbar__col:last-of-type
                        margin-left: auto

                &__item_city
                    display: none

                &__item_credits
                    min-width: auto



                    &:hover
                        .navbar__link_dropdown > .navbar__description
                            color: mainColor

                            svg
                                fill: mainColor

                    .navbar__dropdown .navbar__heading
                            display: block

                    .navbar__heading
                        display: none

                    .navbar__description
                        display: block
                        color: darkGreyColor
                        fill: darkGreyColor

                        svg
                            fill: darkGreyColor

                &_dark
                    .navbar__item_credits .navbar__description svg
                        fill: mainColor

                &__item_profile
                    min-width: auto
                    width auto

                    .navbar__link
                        padding: 0 36px

                    .navbar__col
                        margin: 0

                        &:nth-child(3)
                            display: none

                &__description
                    display: none

    &__search-bar
        position: absolute
        top: 100%
        left: 0
        display: none
        width: 100%
        height: 88px
        z-index: 210

        +above(1024px)
            display: none !important

    &__navbar_mobile
        display: none

        .logo__text
            display: none

        .navbar__item_profile .navbar__link
            &.active
                background-color: darkGreyColor

        .navbar__link_mob-map
            svg:last-child
                display: none

            &.active
                svg:last-child
                    display: block
                svg:first-child
                    display: none
    +below(1024px)
        &__navbar
            &_desktop
                display: none

            &_mobile
                display: block

    &__user-nav
        order: 3
        border-bottom: 1px solid borderColor

        +below(1024px)
            .container
                padding: 0

        +below(768px)
            display: none
