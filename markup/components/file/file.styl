.file
    display: flex
    height: 60px

    &__text
        display: flex
        flex: 1
        height: 100%
        align-items: center
        padding: 0 22px
        border 1px solid borderColor
        border-right: 0
        background-color #f7f7f7
        color rgba(darkGreyColor, .59)
        font-family fontMain
        font-size 16px
        font-weight 400

    &__button
        display: flex
        justify-content: center
        align-items: center
        width: 60px
        height: 60px
        background-color: mainColor
        cursor pointer
        flex-shrink: 0;

    &__icon
        fill: #fff

    &__control
        display: none
