.user-messages
    display: block
    padding-bottom: 54px

    .heading
        margin-top: 47px

    .dotted-dropdown
        z-index: 100

        &__button
            padding-left: 24px
            padding-right: 48px
            width: initial
            height: 65px
            transform: translateX(24px)

    .send-form
        flex-shrink: 0
        margin-top: 23px

    &__content
        display: flex
        margin-top: 46px
        height: 486px
        border 1px solid borderColor

    &__left
        width: 352px
        flex-shrink: 0
        padding-top: 1px
        overflow: hidden

        .message
            margin-top: -1px
            height 88px
            box-sizing: border-box
            border-right: 1px solid borderColor
            cursor: pointer

            &:not(:last-child)
                border-bottom 1px solid borderColor

            &.active
                background-color #fff
                border-color transparent
    &__right
        display: flex
        flex-direction: column
        flex: 1
        overflow: hidden

        .message
            display: inline-flex
            width: initial
            min-width: 278px
            flex: 0
            flex-shrink: 0

            &:not(:last-child)
                margin-bottom: 12px

    &__messages
        display: flex
        flex-direction: column
        box-sizing: border-box
        padding-left: 24px
        padding-right: 24px
        padding-top: 24px

    &__header
        display: flex
        justify-content: space-between
        align-items: center
        border-bottom: 1px solid borderColor
        flex-shrink: 0
        margin-left: 24px
        margin-right: 24px

    &__heading
        font-family fontMain
        font-size 16px
        font-weight 400
        line-height 1.375
        color darkGreyColor

        span
            color: mainColor
            margin-left: 5px

    &__no-messages
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        width: 100%
        height: 100%

        &-picture
            display: flex
            align-items: center
            justify-content: center
            width: 78px
            height: 78px
            background-color: #e8e8e8
            border-radius: 50%

        &-icon
            fill: darkGreyColor

        &-text
            margin-top: 28px
            display: block
            max-width 174px
            color darkGreyColor
            font-family fontMain
            font-size 20px
            font-weight 400
            text-align: center
