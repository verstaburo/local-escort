.payment-method
    display: flex
    align-items: center
    justify-content: center
    width: 100%
    min-height: 60px
    text-decoration: none
    border: 1px solid borderColor
    ellipsis(100%)

    &__heading
        font-size 16px
        color: darkGreyColor
        padding-right: 10px
        ellipsis(100%)

    &__logos
        display: flex
        align-items: center
        flex-shrink: 0

    &__logo:not(:first-child)
        margin-left: 20px
