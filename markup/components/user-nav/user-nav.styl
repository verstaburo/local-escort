.user-nav
    display: flex

    &__item
        display: block
        width: 185px
        height: 60px
        transition(background-color)

        &:not(:first-child)
            border-left: 1px solid borderColor

        &.active
            box-shadow 0 10px 40px rgba(29, 29, 29, .07)
            background-color #fff

            & ^[0]__link
                color: mainColor

            &:not(:first-child)
                border-color: transparent

            + ^[0]__item
                border-color: transparent

    &__link
        position: relative
        display: flex
        width: 100%
        height: 100%
        color darkGreyColor
        font-family fontMain
        font-size 16px
        font-weight 400
        letter-spacing 1px
        text-transform uppercase
        text-decoration: none
        transition(color)
