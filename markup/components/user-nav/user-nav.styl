.user-nav
    display: block
    width: 100%
    background-color: #f7f7f7
    border-bottom: 1px solid #e5e5e5;
    box-shadow: 0 10px 40px rgba(29, 29, 29, 0)
    clear: both;
    m-transition(border-color, box-shadow)
    overflow-x auto
    webkit-overflow-scrolling: touch

    .container
        +below(768px)
            padding: 0

    &.fixed
        position: fixed
        top: 0
        left: 0
        z-index: 200
        border-color: transparent;
        box-shadow: 0 10px 40px rgba(29, 29, 29, .1)

    &__items
        display: flex

    &__item
        position: relative
        display: block
        width: 185px
        height: 60px
        background-color: bgColor
        m-transition(background-color)
        white-space nowrap

        +below(1024px)
            padding-left: 15px
            padding-right: 15px
            width: 160px
            flex: 1

        &:not(:first-child)
            border-left: 1px solid borderColor

        &.active, &:hover
            box-shadow 0 10px 40px rgba(29, 29, 29, .07), 0 1px 0 0 #fff
            background-color #fff
            z-index 2

            & ^[0]__link
                color: mainColor

            &:not(:first-child)
                border-color: transparent

            & + ^[0]__item
                border-color: transparent
        &:hover
            z-index 1

    &__link
        display: flex
        justify-content: center
        align-items: center
        width: 100%
        height: 100%
        color darkGreyColor
        font-family fontMain
        font-size 16px
        font-weight 400
        letter-spacing 1px
        text-transform uppercase
        text-decoration: none
        m-transition(color)

    &__badge
        position: absolute
        top: 0
        right: 0
        display: flex
        align-items: center
        justify-content: center
        width 24px
        height 24px
        box-shadow 0 4px 8px rgba(210, 163, 111, .3)
        background-color mainColor
        color #fff
        font-size 12px
        font-weight 700
        flex-shrink: 0
        border-radius 0 0 0 4px
