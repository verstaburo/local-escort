.navbar
    display: flex
    width: 100%
    height: 88px
    background-color: bgColor

    &__description
        transition color .25s ease

    & > .navbar__item:not(.navbar__item_dropdown).active
        .navbar__link
            background-color: #fff

        .navbar__heading
            color: darkGreyColor

    &_dark
        & > .navbar__item:not(.navbar__item_dropdown).active
            .navbar__link
                background-color: #212223

            .navbar__heading
                color: mainColor !important

    +below(1024px)
        height: 62px

    svg
        transition(all)

    &__dropdown
        box-shadow 0 10px 40px 0 rgba(29, 29, 29, .1)
        transition all .25s ease

        & ^[0]__item
            min-width: auto
            min-height: 80px
            flex: 1

            &:not(:first-child)
                border: 0

        & ^[0]__link
              padding: 0
              height: auto

        a.navbar__link:hover
            background-color: transparent
            opacity: .75

        & ^[0]__heading
            color: #fff

    &__items
        display: flex
        width: 100%
        min-height: 80px
        justify-content: space-between

        &:not(:last-child)
            border-bottom: 1px solid #262728

    &__item
        display: flex
        min-width: 149px
        height: 100%
        box-shadow 0 10px 40px rgba(29, 29, 29, 0)
        transition(border-color, box-shadow)

        &_profile
            width 149px

            +below(1320px)
                width: 135px

            +below(1024px)
                width auto

            .navbar__link
                padding-right 20px

                +below(1320px)
                    padding-right 12px

            // .navbar__col:last-of-type
            //     width calc(100% - 52px)
            //     overflow hidden

            .navbar__heading
                width 100%
                ellipsis(100%)

        &_filter
            .header__filter-close
                display: none

            .navbar__link.active
                .header__filter-close
                    display: block

                .header__filter-icon
                    display: none

                .navbar__badge
                    display: none

        +below(1320px)
            min-width: 135px

        +below(1200px)
            .button
                padding: 0 12px

            .selectbox__box
                padding: 0 12px

        .button
            height 100%

        &_logo
            +below(1320px)
                min-width: 88px

                .logo__text
                    display: none

                .navbar__link
                    display: flex
                    align-items: center
                    justify-content: center

        &_dropdown

           & > a
                color: #fff

        &.navbar__item_dropdown:hover:not(.navbar__item_no_hover),
        &.navbar__item_dropdown.active
            border-color darkGreyColor
            border-left-color darkGreyColor !important

            .navbar__description {
                color: mainColor !important

                svg {
                    fill: mainColor !important
                }
            }

        &_dropdown:hover, &.active, &_active, &_active:hover

            & ^[0]__link
                background-color: darkGreyColor

            & ^[0]__heading
                color: #fff

            & ^[0]__arrow
                opacity: 1

        &_flexible
            flex: 1

        +below(1024px)
            min-width: auto
            flex: 1 0 60px

        &:not(:first-child)
            border-left: 1px solid borderColor

            .navbar_dark &
                border-left: 1px solid #262728

        &:hover:not(.navbar__item_no_hover),
        &.active
            border-color transparent
            box-shadow 0 10px 40px rgba(29, 29, 29, .1)

            + .navbar__item
                border-color transparent

    &__link
        display: flex
        flex-direction: column
        justify-content: center
        padding: 0 24px
        width: 100%
        text-decoration: none
        background-color: inherit
        transition(all)
        flex-shrink: 0
        height: 100%

        .navbar__dropdown &
            justify-content: center
            text-align: center

        &_dropdown
            position: relative

        &_transparentify
            opacity: .5

        +below(1320px)
            padding: 0 12px
            min-width: 80px

        +below(1024px)
            align-items: center

        +below(540px)
            min-width: 64px
            padding: 0

        &_has_badge
            position: relative

        &_row
            flex-direction: row
            justify-content: auto
            align-items: center

        +above(1024px)
            &:hover
                background-color: #fff

        &.active
            background-color: #fff

            +below(1024px)
                background-color: mainColor

                svg
                    fill: #fff

        &_active-style_main

            &.active
                background-color: mainColor
                color: #fff

                & ^[0]__icon_search
                    fill: #fff

    &__arrow
        position: absolute
        bottom: 6px
        right: 7px
        opacity: 0
        transition(opacity)
        fill: mainColor

    &__col:not(:first-of-type)
        margin-left: 12px

    &__icon
        transition(all)

        &_search
            fill: darkGreyColor

        &_currency
            fill: mainColor

        &_list-view
            fill: #fff

    &__heading
        display: block
        color darkGreyColor
        text-transform uppercase
        line-height: 1.1875
        font-size: 16px
        transition(all)

    &__description
        margin-top: 2px
        display: block
        color mainColor
        letter-spacing auto
        line-height: 1.1875
        font-size: 16px
        transition(all)

        &_dark
            color: darkGreyColor

        &_solo
            margin-top: 0

        & svg
            transition(all)

    &__badge
        position: absolute
        display: flex
        align-items: center
        justify-content: center
        width 24px
        height 24px
        box-shadow 0 4px 8px rgba(210, 163, 111, .3)
        background-color mainColor
        color #fff
        font-size 12px
        font-weight 700
        z-index: 1

        &_dark
            background-color: #212223
            box-shadow: 0 0 0 0 rgba(0, 0, 0, 0)

        &_default
            position: static
            margin-left: 8px
            border-radius: 4px

        &_top_right
            top: 0
            right: 0
            border-radius 0 0 0 4px

    &__dropdown
        position: absolute
        top: 100%
        left: 0
        display: block
        width: 100%
        background-color: #1a1b1c
        z-index: -1
        opacity: 0
        transition(opacity, transform)
        transform: translate3d(0, -15px, 0)
        pointer-events none

        .navbar__items
            opacity: 0
            transform: translate3d(0, -10px, 0)
            transition(opacity, transform)
            transition-delay .15s

        &.active
            opacity: 1
            pointer-events: all
            transform: translateY(0)

            .navbar__items
                opacity: 1
                transform: translate3d(0, 0, 0)

    &__suggest
        position absolute
        top 100%
        right -10px
        width 463px

    &__popup-wrapper
        position relative
        width 100%

    &_dark
        background-color: darkGreyColor

        & ^[0]__arrow
            opacity: 1

        .search-bar
            background-color: darkGreyColor

            &__input, &__input::placeholder
                color: #fff

            &__close
                border-left-color: #212223 !important

        .selectbox__value
            color: #fff

        .logo::before
            background-color: #2a2a2b

        & ^[0]__heading
            color: #fff !important

        & ^[0]__description
            color: #fff !important

        svg
            fill: mainColor

        .selectbox:hover
            .selectbox__box
                background-color: #2a2a2b

            .selectbox__value
                color:#d2a36f

        & ^[0]__link

            +above(1024px)
                &:hover
                    background-color: #212223 !important
                    color: mainColor

                    & ^[0]__heading
                        color: mainColor !important
                    & ^[0]__description
                        color: mainColor !important

                &.active
                    background-color: #212223
                    color: mainColor

                    & ^[0]__heading
                        color: mainColor !important
                    & ^[0]__description
                        color: mainColor !important

                    svg
                        fill: #fff

                    & ^[0]__heading
                        color: mainColor !important
                    & ^[0]__description
                        color: mainColor !important

        & ^[0]__item:not(:last-child)
            border-color: #262728
