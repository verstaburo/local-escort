.navbar
    display: flex
    width: 100%
    height: 88px
    background-color: bgColor;

    &__item
        display: block
        min-width: 149px

        &_flexible
            flex: 1

        &:not(:last-child)
            border-right: 1px solid borderColor

    &__link
        display: flex
        flex-direction: column
        justify-content: center
        padding: 0 24px
        width: 100%
        height: 100%
        text-decoration: none
        background-color: inherit
        transition: all .25s ease-in-out
        flex-shrink: 0

        &_has_badge
            position: relative

        &_row
            flex-direction: row
            justify-content: initial
            align-items: center

        &:hover, &.active
            background-color: #fff

    &__col:not(:first-child)
        margin-left: 12px

    &__heading
        display: block
        color darkGreyColor
        text-transform uppercase
        line-height: 1.1875

    &__description
        margin-top: 2px
        display: block
        color mainColor
        letter-spacing initial
        line-height: 1.1875

    &__badge
        position: absolute
        display: flex
        align-items: center
        justify-content: center
        width 24px
        height 24px
        box-shadow 0 4px 8px rgba(210, 163, 111, .3)
        background-color mainColor
        color #fff
        font-size 12px
        font-weight 700

        &_top_right
            top: 0
            right: 0
            border-radius 0 0 0 4px
