.profile-contacts
    display: block

    .contacts-card
        margin-top: 45px

    .grid
        margin-top: 47px

        .grid
            margin-top: -(grid-gap)

    &__heading
        color darkGreyColor
        font-family fontSecond
        font-size 33px
        font-weight 400
        letter-spacing initial

    &__subheading
        color darkGreyColor
        font-family fontMain
        font-size 20px
        font-weight 400
        letter-spacing initial
        margin-bottom: 6px

    &__item
        display: flex
        align-items: center
        border-bottom: 1px solid borderColor
        min-height: 60px
        color darkGreyColor
        font-size 16px
        letter-spacing initial

        &_row
            justify-content: space-between

        span
            font-family fontMain
            font-weight 400
            line-height 22px

        b
            font-family fontSecond
            font-weight: 500
