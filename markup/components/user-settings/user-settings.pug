include ../heading/heading
include ../selectbox/selectbox
include ../button/button
include ../avatar/avatar
include ../grid/grid
include ../container/container

mixin user-settings()
    +b.user-settings&attributes(attributes)
        +container
            +heading Settings
            +e.FORM(method="post" action="#" enctype='multipart/form-data').form
                +grid
                    +col(4)
                        +e.LABEL.field
                            +e.SPAN.label Nickname
                            +selectbox('English')._default-text
                    +col(4)
                        +e.LABEL.field
                            +e.SPAN.label Email
                            +e.INPUT(type="text").input
                    +col(4)
                        +e.LABEL.field
                            +e.SPAN.label Nickname
                            +e.INPUT(type="text").input
                    +col(12)
                        +e.field
                            +e.SPAN.label Avatar
                            +e.avatar
                                +avatar('agency.png')._size_big
                                +e.avatar-buttons
                                    +e.LABEL.avatar-button
                                        +e.avatar-btn Select new file
                                        +e.INPUT(type='file').file
                                    +e.avatar-button
                                        +e.BUTTON.avatar-btn delete
                    +col(6)
                        +e.LABEL.field
                            +e.SPAN.label Password
                            +e.INPUT(type="password").input
                    +col(6)
                        +e.LABEL.field
                            +e.SPAN.label Confirm password
                            +e.INPUT(type="password").input
                    +col(3)
                        +button('button')._uppercase._bg_darkGrey._color_main.__action Save changes
                    +col(3)
                        +button('button')._uppercase._border_standart.__action Cancel
                    +col(3).grid__col_push_right
                        +button('button')._uppercase._border_standart.__action Delete account

