include ../heading/heading
include ../selectbox/selectbox
include ../button/button
include ../avatar/avatar
include ../grid/grid
include ../container/container
include ../field/field
include ../update-avatar/update-avatar

mixin user-settings()
    +b.user-settings&attributes(attributes)
        +container
            +heading Settings
            +e.FORM(method="post" action="#" enctype='multipart/form-data').form
                +grid
                    +col(4)
                        +field
                            +field-label Nickname
                            +field-input
                    +col(4)
                        +field
                            +field-label Email
                            +field-input
                    +col(4)
                        +field
                            +field-label Interface language
                            +selectbox
                                +selectbox-control(name='interface-lang')
                                    option(value='eng') English
                                    option(value='fr') French
                    +col(12)
                        +field.DIV
                            +field-label Avatar
                            +update-avatar
                    +col(6)
                        +field
                            +field-label Password
                            +field-input(type="password")
                    +col(6)
                        +field
                            +field-label Confirm password
                            +field-input(type="password")
                    +col(3)
                        +button('button')._uppercase._bg_darkGrey._color_main.__action Save changes
                    +col(3)
                        +button('button')._uppercase._border_standart.__action Cancel
                    +col(3).grid__col_push_right
                        +button('button')._uppercase._border_standart.__action Delete account

