#select-city
    +below(1024px)
        top: 0 !important
        padding: 0 !important

        .popup__wrapper
            height: 100vh !important

.select-city-popup
    align-self: flex-start
    width: 100%
    height 100%
    background-color: darkGreyColor
    padding-top: 20px
    padding-bottom: 20px
    overflow auto;

    +below(1024px)
        padding-top: 0

    &__select
        display: none
        justify-content: space-between
        align-items: center
        border-bottom: 1px solid rgba(#efefef, .06)

        .popup__close
            position: static
            transform: translate(0, 0)

            +below(1024px)
                display: flex !important

        span
            font-size 16px
            color #fff
            padding-left: 12px

        +below(1024px)
            display: flex

    .container
        width: auto
        max-width: 1182px
