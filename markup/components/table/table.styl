.table
    display: block

    &__header
        display: flex
        color rgba(darkGreyColor, .5)
        font-size 12px
        font-weight 400
        text-transform uppercase

        &_space_between
            justify-content: space-between
    &__row
        display: flex
        width: 100%
        min-height: 44px
        align-items: center

        &_space_between
            justify-content: space-between

        &:not(:last-child)
            border-bottom: 1px solid borderColor

    &__col
        display: flex
        align-items: center
        min-width: 0

        &:not(:last-child)
            margin-right: 23px

        widthModifiers = (40 50 60 70 80 90 100 110 120 130 140 150 160 170 180 190 200 210 220 230 240 250 260)
        for i in range(0,(length(widthModifiers) - 1))
            &_width_{widthModifiers[i]}
                width: widthModifiers[i]px

        &_flexible
            flex: 1

    &__text
        color darkGreyColor
        font-family fontMain
        font-size 16px
        font-weight 400
        line-height 22px
        ellipsis(100%)
