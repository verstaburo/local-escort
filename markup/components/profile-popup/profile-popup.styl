#profile-popup
    z-index 100000

.profile-popup
    display: block
    box-sizing: border-box
    padding-top: 60px
    padding-bottom: 60px
    max-width 100vw

    +below(768px)
        padding-top: 0
        padding-bottom: 0

    .popup__close
        transform: translate(0, 0)

        +below(1140px)
            display: flex !important

    & > .container .swiper-container
        max-width: 100vw

    .user-profile

        .container
            width: 100%
            padding: 0

        &__container
            margin-top: 0
            border: 0

    &__slider
        position: relative

    &__slide
        display: none
        transition: opacity .5s ease

        &.active
            display: block

    &__buttons
        position fixed
        top: 50vh
        left: 0
        right: 0
        transform: translateY(-50%) !important
        width calc(100% - 17px)
        display flex
        justify-content space-between
        z-index: 50
        pointer-events none

    &__button
        display: block
        width: 78px
        height: 156px
        cursor: pointer
        m-transition(transform, background-color, opacity)
        overflow: hidden
        position relative
        pointer-events all

        +below(1300px)
            width: 39px
            height: 78px

        &::before
            position: absolute;
            top: 0;
            left: 0;
            content: '';
            display: block;
            width: 200%;
            height: 100%;
            background-color: rgba(#fff, .05)
            border-radius: 50%;
            m-transition(all)

            +below(1200px)
                background-color: darkGreyColor

        &:hover
            &::before
                background-color: rgba(#fff, .08)

                +below(1200px)
                    background-color: rgba(darkGreyColor, .8)

            svg
                fill rgba(mainColor, 1)

        svg
            position: absolute
            top: 50%
            transform: translate(-50%, -50%)
            m-transition(all)
            fill: rgba(#fff, .6)

        &_prev
            left: 0

            &.swiper-button-disabled
                transform: translate3d(-100%, -50%, 0)

            &::before
                left: -100%

            svg
                left: 41%
                transform: translate(-50%, -50%) rotate(-180deg)

        &_next
            right: 0

            &.swiper-button-disabled
                transform: translate3d(100%, -50%, 0)

            svg
                left: 59%
