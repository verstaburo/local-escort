.profile-popup
    display: block
    box-sizing: border-box

    & > .container .swiper-container
        max-width: 100vw

    .user-profile

        .container
            width: 100%
            padding: 0

        &__container
            margin-top: 0
            border: 0

    &__button
        position: fixed
        display: block
        width: 156px
        height: 156px
        top: 50%
        background-color: rgba(#fff, .05)
        cursor: pointer
        border-radius: 50%
        transition(transform, background-color)

        +below(1300px)
            width: 78px
            height: 78px

            svg
                width: 12.5px
                height: 7px

        svg
            fill: rgba(#fff, .4)
            transition(fill)

        &:hover
            background-color: rgba(#fff, .08)

            svg
                fill: #fff

        &_prev
            left: 0
            transform: translate3d(-50%, -50%, 0)

            &.swiper-button-disabled
                transform: translate3d(-100%, -50%, 0)

            .profile-popup-button__icon-container
                margin-left: auto

            svg
                transform: rotate(-90deg)

            & ^[0]__icon-container
                margin-left: auto

        &_next
            right: 0
            transform: translate3d(50%, -50%, 0)

            &.swiper-button-disabled
                transform: translate3d(100%, -50%, 0)

            .profile-popup-button__icon-container
                margin-right: auto

            svg
                transform: rotate(90deg)

    &__icon-container
        display: flex
        justify-content: center
        align-items: center
        width: 50%
        height: 100%
