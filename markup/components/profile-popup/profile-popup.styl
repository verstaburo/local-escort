.profile-popup
    display: block
    box-sizing: border-box
    padding-top: 60px
    padding-bottom: 60px

    .popup__close
        transform: translate(0, 0)

        +below(1140px)
            display: flex !important

    & > .container .swiper-container
        max-width: 100vw

    .user-profile

        .container
            width: 100%
            padding: 0

        &__container
            margin-top: 0
            border: 0

    &__button
        position: fixed
        display: block
        width: 78px
        height: 156px
        top: 50%
        transform: translate3d(0, -50%, 0);
        cursor: pointer
        transition(transform, background-color)
        z-index: 50
        overflow: hidden;

        &::before
            position: absolute;
            top: 0;
            left: 0;
            content: '';
            display: block;
            width: 200%;
            height: 100%;
            background-color: rgba(#fff, .05)
            border-radius: 50%;

        &:hover
            background-color: rgba(#fff, .08)

        svg
            position: absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)

        &_prev
            left: 0

            &::before
                left: -100%;

            svg
                transform: translate(-50%, -50%) rotate(-180deg)

        &_next
            right: 0
