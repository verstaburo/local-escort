.profile-popup
    display: block
    box-sizing: border-box
    padding-top: 60px
    padding-bottom: 60px

    .popup__close
        transform: translate(0, 0)

        +below(1140px)
            display: flex !important

    & > .container .swiper-container
        max-width: 100vw

    .user-profile

        .container
            width: 100%
            padding: 0

        &__container
            margin-top: 0
            border: 0

    &__button
        position: fixed
        display: block
        width: 78px
        height: 156px
        top: 50%
        transform: translate3d(0, -50%, 0)
        cursor: pointer
        transition(transform, background-color, opacity)
        z-index: 50
        overflow: hidden

        +below(1300px)
            width: 39px
            height: 78px

        &::before
            position: absolute;
            top: 0;
            left: 0;
            content: '';
            display: block;
            width: 200%;
            height: 100%;
            background-color: rgba(#fff, .05)
            border-radius: 50%;
            transition(all)

            +below(1200px)
                background-color: darkGreyColor

        &:hover
            &::before
                background-color: rgba(#fff, .08)

                +below(1200px)
                    background-color: rgba(darkGreyColor, .8)

            svg
                fill rgba(mainColor, 1)

        svg
            position: absolute
            top: 50%
            transform: translate(-50%, -50%)
            transition(all)
            fill: rgba(#fff, .6)

        &_prev
            left: 0

            &.swiper-button-disabled
                transform: translate3d(-100%, -50%, 0)

            &::before
                left: -100%

            svg
                left: 41%
                transform: translate(-50%, -50%) rotate(-180deg)

        &_next
            right: 0

            &.swiper-button-disabled
                transform: translate3d(100%, -50%, 0)

            svg
                left: 59%
