.filter
    display: flex
    padding: 24px 0
    border-bottom: 1px solid borderColor

    &_extended
        display: block
        padding: 0
        border-bottom: 0
        background-color: #fff

        .grid
            padding-top: 16px
            padding-bottom: 40px

            &:first-child
                padding-top: 0

            &:not(:first-child)
                border-top: 1px solid borderColor

    &__header
        display: flex
        justify-content: space-between
        width: 100%
        margin-bottom: 17px

    &__label
        font-size 16px

    &__col
        min-width: 235px

        &_no_width
            min-width: initial

        &_push_right
            margin-left: auto

        &:not(:last-child)
            margin-right: 24px

    &__button
        width: 60px
        height: 60px

    &__container
        display: flex

.filter-additional
    display: none
    box-shadow 0 10px 40px rgba(29, 29, 29, .1)
    background-color darkGreyColor
    padding: 15px 0

    .accordion__content .grid:first-child
        margin-top: -24px

    .grid
        padding-top: 0
        padding-bottom: 0

        &:not(:first-child)
            border: 0
            margin-top: 12px

        &__col_twelve
            margin-bottom: 12px

    &__row
        padding: 43px 0

        &:not(:last-child)
            border-bottom: 1px solid rgba(#efefef, .06)

    &__heading
        color #fff
        font-family fontSecond
        font-size 26px
        font-weight 400
        letter-spacing: initial

    &__label
        color #fff
        font-size 20px
        letter-spacing initial

        &_left
            margin-right: 38px

        &_top
            margin-bottom: 32px

    &__sublabel
        opacity .35
        color #fff
        font-size 16px
        line-height 26px
        letter-spacing initial

    &__header
        display: flex
        justify-content: space-between
        width: 100%
        margin-bottom: 17px

    &__rating
        padding-top: 18px
