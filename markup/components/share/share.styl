.share
    display: flex
    align-items: center
    justify-content: space-between

    +below(768px)
        flex-direction: column
        align-items: flex-start
        justify-content: flex-start

    &__label
        color darkGreyColor
        font-family fontMain
        font-size 20px
        font-weight 400

    &__buttons
        margin: 0 auto
        display: flex
        flex-wrap wrap
        padding-left: 1px
        padding-top: 1px

        +below(768px)
            margin-left: 0
            margin-right: 0
            margin-top: 40px

    &__button
        display: flex
        justify-content: center
        align-items: center
        width: 60px
        height: 60px
        margin-left: -1px
        margin-top: -1px
        padding: 0

        &_dots
            margin-left: initial

    .dotted-dropdown
        &__button
            background-color: transparent

            &:hover
                background-color: mainColor
