.dotted-dropdown
    position: relative
    display: block

    &_shadow
        & ^[0]__content
            box-shadow 0 10px 40px rgba(29, 29, 29, .1)

    &.active
        & ^[0]__content
            display: block

        & ^[0]__button
            background-color: mainColor
            border-color: transparent

        & ^[0]__icon_dots
            opacity: 0

        & ^[0]__icon_close
            opacity: 1

    &__button
        position: relative
        display: block
        width: 60px
        height: 60px
        background-color: #fff
        border: 1px solid borderColor
        transition(border-color, background-color)
        cursor: pointer

        &:hover
            background-color: mainColor
            border-color: transparent

            & ^[0]__icon_dots
                fill: #fff

    &__icon
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)

        transition(opacity)

        &_dots
            fill: darkGreyColor
            opacity: 1

        &_close
            fill: #fff
            opacity: 0

    &__content
        position: absolute
        top: 100%
        right: 0
        width: 236px
        display: none
