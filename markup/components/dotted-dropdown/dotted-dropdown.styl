.dotted-dropdown
    position: relative
    display: block

    &_shadow
        & ^[0]__content
            box-shadow 0 10px 40px rgba(29, 29, 29, .1)

    &.active
        & ^[0]__content
            display: block

        & ^[0]__button
            background-color: mainColor
            border-color: transparent

        & ^[0]__icon
            fill: #fff

    &__button
        position: relative
        display: block
        width: 60px
        height: 60px
        background-color: #fff
        border: 1px solid borderColor
        transition(border-color, background-color)
        cursor: pointer
        iziAnimation()

    &__icon
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        fill: mainColor
        transition(opacity, fill)

        &_dots
            fill: darkGreyColor

    &__content
        position: absolute
        top: 100%
        right: 0
        width: 236px
        display: none

    &_pure
        & ^[0]__button
            background-color: transparent
            border-color: transparent

            &:hover
                background-color: transparent
                border-color: transparent

                & ^[0]__icon_dots
                    fill: mainColor

        &.active
            & ^[0]__content
                display: block

            & ^[0]__button
                background-color: transparent
                border-color: transparent

                & ^[0]__icon_dots
                    fill: mainColor
