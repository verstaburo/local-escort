.rating-interactive
    display: inline-flex
    flex-direction: row-reverse
    justify-content: flex-end
    position relative
    padding-left: 1px
    padding-top: 1px

    +below(400px)
        flex-wrap: wrap

    &_dark

        & ^[0]__star
            border-color: #262728

        & ^[0]__icon
            fill: rgba(#fff, .15)

        & ^[0]__reset
            color: rgba(#fff, .1)
            border: 1px solid #262728
            margin-top: -1px
            margin-left: -1px

            &:hover
                color: rgba(#fff, .6)

    &__reset
        display: flex
        align-items: center
        justify-content: center
        border-left: 1px solid borderColor
        padding: 0 22px
        cursor: pointer
        font-size 16px
        font-weight 400
        text-transform uppercase
        transition(all)

        +below(400px)
            width: 100%
            height: 52px
            order: 2
            border: 1px solid borderColor
            margin-top: -1px
            margin-left: -1px

    &__star
        display: flex
        align-items: center
        justify-content: center
        width: 60px
        height: 60px
        cursor: pointer
        background-color: transparent
        transition(border-color, background-color)
        border: 1px solid borderColor
        margin-left: -1px
        margin-top: -1px
        flex-shrink: 0

        +below(768px)
            width 52px
            height: 52px

        &.active
            background-color: darkGreyColor
            border-color: #262728

            & ~ ^[0]__star
                background-color: darkGreyColor
                border-color: #262728

        &:hover ~ ^[0]__star ^[0]__icon,
        &:hover ^[0]__icon,
        &.active ~ ^[0]__star ^[0]__icon,
        &.active ^[0]__icon
            fill: mainColor

    &__control
        display: none

    &__icon
        width 16px
        height 15px
        fill: #e6e6e6
        //fill: rgba(#fff, .15)
        transition(all)


    &-counter
        display: inline-flex
        flex-direction: column

        &__header
            display: flex
            width: 100%
            justify-content: space-between
            align-items: center
            margin-bottom: 15px
            color: darkGreyColor
            font-family: fontMain
            font-size: 16px
            font-weight: 400
            line-height: 22px

        &__counter
            display: block
            color: mainColor
