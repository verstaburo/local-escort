.profile-photo-popup
    display: flex
    flex-direction: column
    height: 100%
    padding-left: 20px
    max-width: 100vw
    pointer-events none
    overflow: hidden
    position: relative

    .popup__close
        z-index: 100

    +below(1024px)
        flex-direction: row
        justify-content: center
        align-items: center
        padding-left: 0

    *
        pointer-events all

        +below(768px)
            pointer-events: none

    &__footer
        display: flex
        justify-content: space-between
        padding: 0 25px
        height 60px
        box-shadow 0 10px 40px rgba(29, 29, 29, .1)
        background-color darkGreyColor
        pointer-events: all

    &__link
        color rgba(#fff, .5)
        display: flex
        align-items: center
        font-family fontMain
        font-size 16px
        font-weight 400
        text-decoration: none

    &__like
        display: flex
        height: 100%
        align-items: center
        text-decoration: none

        &-icon
            fill: #fff
            margin-right: 13px

    &__links
        display: flex
        height: 100%
        margin-left: auto

        & ^[0]__link
            height: 100%

            &:not(:last-child)
                margin-right: 48px

    &__caret-icon
        fill: #fff

    &__button
        display: flex
        align-items: center
        width: 20%
        height: calc(100% - 60px)
        cursor: pointer
        position: absolute
        top: 0
        z-index: 1
        transform: translate3d(0, 0, 0)
        transition: transform .5s ease-in-out
        pointer-events: all


        &_prev
            left: 0
            padding-left: 41px

            &.swiper-button-disabled
                transform: translate3d(-100%, 0, 0)

            & ^[0]__caret-icon
                transform: rotate(-90deg)

        &_next
            padding-right: 41px
            right: 0

            &.swiper-button-disabled
                opacity: 0
                transform: translate3d(100%, 0, 0)

            & ^[0]__caret-icon
                margin-left: auto
                transform: rotate(90deg)

    &__zoom-icon
        position: absolute
        top: 8px
        right: 8px
        opacity: 0
        transition(opacity)

    &__gallery
        margin-top: auto
        margin-bottom: auto
        display: block
        max-width: 916px
        width: 100%

        +below(768px)
            height: 100%

        +below(1024px)
            margin: auto

        &-img
            width: 100%
            height: auto
            pointer-events: all

            &-wrap
                +below(768px)
                    display: flex
                    flex: 1
                    align-items: center
                    pointer-events: none

        &-item
            +below(768px)
                display: flex
                flex-direction: column

        &-items
            position: relative

    &__thumbs
        margin-top: auto
        display: block

        +below(1024px)
            display: none

        .swiper-wrapper
            margin-left: calc(-50% + 187.5px) // 187.5px = (slide width) * 1.5

        &-item
            position: relative
            width 125px
            height 94px
            background-color: darkGreyColor

            &.swiper-slide-active

                .image-bg
                    opacity: .5

                & ^[0]__zoom-icon
                    opacity: 1

        .image-bg
            z-index: initial
            width: 100%
            height: 100%
            transition(opacity)
