.user-profile
    display: block
    background-color bgColor
    padding-bottom: 58px
    box-sizing: border-box

    & > .container
        +below(768px)
            padding: 0

    &__header
        margin-top: 8px

        +below(768px)
            padding-left: 31px
            padding-right: 31px

        .grid__col:first-child
            +below(1134px)
                width: 100%

        +below(1134px)
            .grid__col:not(:first-child)
                width: (100/3)%

                +below(768px)
                    width: 100%

    &__container
        margin-top: 32px
        border: 1px solid borderColor

        +below(768px)
            border: 0

    &__profile-card
        width: 316px
        transform: translate3d(0, 0, 0);
        will-change: position, transform;

        +below(1023px)
            position: static !important
            transform: translate3d(0, 0, 0) !important
            width: 100%

        &.fixed
            position: fixed
            top: 0
            transform: translate3d(0, 0, 0)

    &__main
        display: flex

        +below(1023px)
            flex-direction: column

    &__content
        display: block
        flex: 1

        +below(1023px)
            width: 100%
            flex: initial
            order: 2

    &__sidebar
        position: relative
        display: flex
        flex-direction: column
        width: 316px
        padding-bottom: 57px
        background-color: #fff
        z-index 2;
        will-change: min-height;

        +below(1023px)
            width: 100%
            order: 1

    &__short-info
        margin-top: auto
        padding-top: 70px
        padding-left: 55px
        padding-right: 55px

        +below(768px)
            padding-top: 30px
            padding-left 40px
            padding-right: 40px

        +between(660px, 1023px)
            display: flex

        .short-info:not(:last-child)
            margin-bottom: 21px

            +between(660px, 1023px)
                margin-bottom: 0
                margin-right: 24px
    &__row
        width: 100%

        &:not(:first-child)
            margin-top: 51px
            padding-left: 58px
            padding-right: 58px

            +below(768px)
                padding-left: 0
                padding-right: 0

        &_left_padding:not(:first-child)
            padding-right: 0

        &_share
            padding-top: 58px
            border-top: 1px solid borderColor

            .share
                padding-bottom: 52px
                border-bottom: 1px solid borderColor

        &_agencies
            &:not(:first-child)
                margin-top: 40px

            & > .heading
                margin-bottom: 45px

        &_acts:not(:first-child)
            margin-top: 27px

        &_mob_padding
            +below(768px)
                &:not(:first-child)
                    padding-left: 31px
                    padding-right: 31px

        & > .grid
            +below(700px)
                .grid__col
                    width: 100%

    .share
        &__label
            margin-right: 114px

        &__buttons
            width: 100%
            margin: 0

        &__button:last-child
            margin-left: auto
