.map
    position: relative
    height: 100%

    &__count
        display: flex
        width: 28px
        height: 28px
        justify-content: center
        align-items: center
        font-size: 12px
        font-weight: bold
        background-color: mainColor
        color: #fff
        border-radius: 50%

    &__marker, &__group
        position absolute
        cursor pointer
        m-transition(border-color)
        padding: 10px
        border: 2px solid transparent
        border-radius: 50%
        display: block
        z-index 100

        .close
            display: none
            position: absolute
            top: 10px
            right: 10px
            transform: translate(50%, -50%)
            z-index 10

        &.active
            display: block
            border-color: mainColor
            z-index: 10

            .close
                display: flex

    &__group
        display: flex
        flex-wrap: wrap
        width: 108px
        height: 108px
        padding: 24px 20px 20px 24px

        &.active
            display: flex

        & > *:nth-child(odd)
                margin-right: 4px
                margin-bottom: 4px
    &__block
        width: 100%
        height: 100%

    &__heading
        position: absolute
        top: 30px
        left: 30px
        display: inline-flex
        align-items: center
        padding: 0 18px
        height 48px
        box-shadow 0 10px 40px rgba(29, 29, 29, .6)
        background-color darkGreyColor
        z-index: 112
        min-width: 258px

        &:not(.active) + .scroll-wrapper
            pointer-events: none !important

        +below(767px)
            top: 12px
            left: 12px
            right: 12px

        svg
            opacity 0
            pointer-events none
            fill: rgba(#fff, .4)
            margin-left: auto
            cursor: pointer
            m-transition(all)

        &.active
            svg
                opacity 1
                pointer-events all

                &:hover
                    fill rgba(#fff, .8)

        .model-map &
            top 30px

            +below(767px)
                top 30px

    .scroll-wrapper
        padding-top: 0px !important
        padding-bottom: 24px

    &__content
        width: 258px
        position: absolute
        top: 0
        left: 30px
        z-index: 111
        max-height: 100%

        &.scroll-wrapper
            +below(767px)
                left: 50%
                transform: translateX(-50%)

                & ^[0]__content
                    position: static

        .model-preview
            background-color: #fff

        & > *
            margin-bottom: 12px

            &:last-child
                margin-bottom: 24px

    &__text
        color #fff
        font-family fontMain
        font-size 16px
        font-weight 400

        &:not(:first-child)
            margin-left: 5px

        &_main
            color mainColor

    &__buttons
        position: absolute
        bottom: 30px
        right: 30px
        z-index: 100
        display: block

        // +below(767px)
        //     display: none

    &__button
        display: flex
        align-items: center
        justify-content: center
        background-color: darkGreyColor
        box-shadow 0 10px 40px rgba(29, 29, 29, .6)
        width: 48px
        height: 48px
        cursor: pointer

        &:not(:last-child)
            margin-bottom: 6px

    &__zoom-out, &__zoom-in
        m-transition(all)
        fill: #fff

        ^[0]__button:hover &
            opacity .6

    &__location
        m-transition(all)
        fill: mainColor

        ^[0]__button:hover &
            opacity .6

    .scroll-wrapper > .scroll-content
        overflow-x: hidden !important;
