.map
    position: relative

    &__block
        width: 100%
        height: 100%

    &__heading
        position: absolute
        top: 30px
        left: 30px
        display: inline-flex
        align-items: center
        padding: 0 18px
        min-width 258px
        height 48px
        box-shadow 0 10px 40px rgba(29, 29, 29, .6)
        background-color darkGreyColor
        z-index: 100

    &__text
        color #fff
        font-family fontMain
        font-size 16px
        font-weight 400

        &:not(:first-child)
            margin-left: 5px

        &_main
            color mainColor

    &__buttons
        position: absolute
        bottom: 30px
        right: 30px
        z-index: 100
        display: block

    &__button
        display: flex
        align-items: center
        justify-content: center
        background-color: darkGreyColor
        box-shadow 0 10px 40px rgba(29, 29, 29, .6)
        width: 48px
        height: 48px
        cursor: pointer

        &:not(:last-child)
            margin-bottom: 6px

    &__zoom-out, &__zoom-in
        fill: #fff

    &__location
        fill: mainColor
