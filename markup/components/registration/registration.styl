.registration
    display: block
    padding-top: 38px
    padding-bottom: 54px

    & > .container > .heading
        margin-bottom: 22px

    .grid:first-of-type
        padding-bottom: 15px

        &::after
            content: ''
            display: block
            width: 100%
            height: 1px
            background-color: borderColor
            margin-top: 40px
            margin-left: 12px
            margin-right: 12px

    &__member
        padding-bottom: 30px
        border-bottom: 1px solid borderColor

    .grid__col
        +below(1024px)
            &_four:not(:nth-child(-n+3)) // do not touch first 3 elements (info-control blocks)
                width: 50%
                +below(768px)
                    width: 100%

        +below(768px)
            width: 100%

    &__button
        width: 100%

    &__avatar_update
        display: none

    &__captcha
        +below(768px)
            margin-left: -11px;

        +below(500px)
            margin-left: 0;
            display flex
            justify-content: center;

            .g-recaptcha
                flex-grow: 0;
                transform: scale(0.87) !important;
