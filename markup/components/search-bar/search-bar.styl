.search-bar
    position: relative
    display: flex
    align-items: center
    width: 100%
    height: 100%
    m-transition(background)

    &_extended
        background-color: #fff

        & > ^[0]__close
            opacity: 1
            pointer-events all
            margin-right: 14px

            +below(1024px)
                display: none

        & > ^[0]__placeholder span
            display: inline-block

    &_dark
        background-color darkGreyColor

    &__input
        width: 100%
        flex-grow: 1
        height: 100%
        border: 0
        background-color: transparent
        padding: 0 24px
        font-size: 16px
        min-width: 0

        &::placeholder
            opacity 0

        .search-bar_dark &
            color: #fff

        &:focus + .search-bar__placeholder
            display: none !important

    &__placeholder
        position: absolute
        top: 50%
        left: 0
        display: inline-block
        padding-left: 24px
        padding-right: 100px
        font-size: 16px
        color: darkGreyColor
        transform: translateY(-50%)
        pointer-events: none
        ellipsis(100%)

        .search-bar_dark &
            color: #fff

        span
            display: none
            color: rgba(darkGreyColor, .4)

    &__button
        display: block
        margin-right: 24px
        border: 0
        background-color: transparent

    &__icon
        fill: darkGreyColor
        m-transition(all)
        flex-shirnk: 0

        .search-bar_dark &
            fill: mainColor

        &:hover
            opacity .6

    &__close
        flex-shirnk: 0
        display: inline-block
        opacity: 0
        pointer-events none
        width: 60px
        height: 60px
        margin-right: -60px
        m-transition(all)
