.model-photos
    display: block

    .grid
        margin: 0

        &__col
            padding: 0

    &__column
        height: 197px

        &_height-1
            height: 394px

    &__link
        position: relative
        display: block
        width: 100%
        height: 100%

        &:hover
            & ^[0]__description
                opacity: 1

    &__img
        display: block
        width: 100%
        height: 100%
        fill-img()

    &__description
        position: absolute
        top: 0
        left: 0
        display: flex
        justify-content: center
        align-items: center
        flex-direction: column
        width: 100%
        height: 100%
        background-color: rgba(darkGreyColor, .85)
        z-index: 1
        opacity: 0
        transition(opacity)

        b
            color #fff
            font-family fontSecond
            font-size 33px
            font-weight 400
            letter-spacing initial

        span
            margin-top: 5px
            color rgba(#fff, .4)
            font-size 12px
            font-weight 400
            text-transform uppercase
