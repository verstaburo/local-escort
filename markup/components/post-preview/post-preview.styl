.post-preview
    display: block
    text-decoration: none

    .image-bg
        width 100%
        height 162px
        z-index: 1

    &__body
        display: flex
        flex-direction: column
        border: 1px solid borderColor
        border-top: 0
        padding: 25px 28px
        min-height: 180px

    &__text
        font-size 16px
        line-height 1.375
        color darkGreyColor
        padding-bottom: 25px

    &__date
        margin-top: auto
        font-size 14px
        color rgba(darkGreyColor, .3)
