.range-slider
    display: block

    &_dark
        & ^[0]__fields
            border-color: rgba(#efefef, .06)

        & ^[0]__field:not(:last-child)
            border-color: rgba(#efefef, .06)

        & ^[0]__text
            color: #fff
            font-weight: 700

        & ^[0]__slider .ui-slider-handle
            background-color: #1e1f20

    &__fields
        display: flex
        border: 1px solid borderColor

    &__field
        display: flex
        justify-content: center
        align-items: center
        min-width: 117px
        width: 50%
        height: 60px

        &:not(:last-child)
            border-right: 1px solid borderColor

    &__text
        font-size: 16px

    &__input
        display: block

    &__value
        font-weight: 700
        letter-spacing initial

    &__label
        initial-letter initial
        margin-left: 2px

    &__slider
        display: block

        &.ui-slider-horizontal
            height: 2px

        &.ui-widget-content
            border: 0

        &.ui-corner-all
            border-radius: 0

        &.ui-widget-content
            background-color: transparent;

        .ui-slider-handle
            top: -7px
            margin-left: -7px
            width 14px
            height 14px
            border 2px solid mainColor
            border-radius: 50%
            background-color #fff

        .ui-widget-header
            background-color mainColor
