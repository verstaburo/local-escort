mixin range-slider(min, max, initialMin, initialMax)
    +b.range-slider(data-min=min data-max=max, data-value-min=initialMin data-value-max=initialMax)&attributes(attributes)
        block

mixin range-slider-fields
    +e.fields&attributes(attributes)
        block

mixin range-slider-field
    +e.field&attributes(attributes)
        block

mixin range-slider-input
    +e.INPUT.input&attributes(attributes)

mixin range-slider-text
    +e.DIV.text&attributes(attributes)
        +e.B.value
        if block
            +e.SPAN.label
                block

mixin range-slider-control
    +e.slider&attributes(attributes)

